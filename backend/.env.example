
# Database Configuration
MONGODB_URI=mongodb://localhost:27017/craftcircle
MONGODB_TEST_URI=mongodb://localhost:27017/craftcircle_test

# Server Configuration
PORT=8080
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for password reset, notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@craftcircle.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External API Keys (if needed)
# STRIPE_SECRET_KEY=sk_test_...
# PAYPAL_CLIENT_ID=...
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8081

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@craftcircle.com
DEFAULT_ADMIN_PASSWORD=admin123!
